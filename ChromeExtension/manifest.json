{
  "manifest_version": 2,

  "name": "FB Graffiti",
  "description": "Facebook walls are now open to graffiti.",
  "version": "2.0.2",

  "permissions": [
    "tabs", "http://*/*", "https://*/*","storage"
  ],
  "web_accessible_resources": [
    "images/sprayCan.png",
    "images/share.png",
    "jquery.min.js",
    "spectrum.js",
    "fbGraffiti.js"
  ],
  "browser_action": {
    "default_icon": "images/spray.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "js" : ["jquery.min.js", "spectrum.js","fbGraffiti.js"],
    "matches": ["https://www.facebook.com/*"]
  }]
}